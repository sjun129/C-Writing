#include <iostream>
#include <fstream>
#include <string>
using namespace std;

int main()
{
    ifstream fin("a.txt");
    ofstream fout("b.txt");
    
    string s;
    getline(fin, s, '&');
    
    string f,r;
    cout << "find: ";   getline(cin,f);
    cout << "replace: ";   getline(cin,r);
    
    int sindex = 0;
    while(true){
        int findex = s.find(f, sindex);
        if(findex == -1)    break;
        s.replace(findex, f.length(), r);
        sindex = findex + r.length();
    }
    fout << s;
    
}
